*
	box-sizing border-box

body
	margin 0
	font-family sans-serif
	background-image url(/img/checkered.png)
	background-position center center

html, body
	height 100%

a
	color #666

.status-bar-top
	width 100%
	height 48px
	position fixed
	top 0
	left 0
	text-align center
	background-color #fff
	color #666
	border-bottom 1px solid #eee
	z-index 100

	.filename
		line-height 48px
		font-size 13px
		font-weight bold

.viewer
	text-align center
	white-space nowrap
	height 100%
	padding 58px 10px 42px 10px

	&:before
		content ''
		display inline-block
		height 100%
		vertical-align middle
		margin-right -0.25em

.image-container
	max-width 80%
	display inline-block
	vertical-align middle
	overflow hidden
	cursor zoom-in

	.image
		max-width 100%

	&__zoomed
		cursor zoom-out
		max-width none

		.image
			max-width none

.not-found
	text-align center
	margin-top 100px
	color #666

.nobg
	background none

.view-file
	display inline-block
	text-decoration none
	width 320px
	text-align center

	&:hover
		text-decoration underline

	img
		display block
		margin 0 auto 10px auto

.file-size
	color #999
	font-size 12px
